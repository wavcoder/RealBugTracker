﻿@model IEnumerable<BugTracker.Models.TicketHistories>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" />


<h2>Ticket History Index</h2>



<table class="table table-striped table-hover ">

    <thead>
        <tr class="warning">
            <th>
                @Html.DisplayNameFor(model => model.Ticket.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.OldValue)*@
                Previous Value
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.NewValue)*@
                Updated Value
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Changed)
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr class="success">
            <td>
                @Html.DisplayFor(modelItem => item.TicketId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Property)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OldValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Changed)
            </td>
            @*<td>
                    <button class="btn-xs btn-default">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    </button>
                    <button class="btn-xs btn-default">
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </button>
                    <button class="btn-xs btn-default">
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </button>
                </td>*@
        </tr>
    }

</table>
<p>
        <button class="btn btn-default">
            @Html.ActionLink("Back To Tickets", "Index","Tickets")
        </button>
    </p>

