@{
    ViewBag.Title = "Home Page";
}
<link href="~/multi-select/css/jumbotron.css" rel="stylesheet" />
<script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="~/Scripts/count.js"></script>
<br />
<body background="~/multi-select/img/bugout.gif">

    <div class="container">
        <div  class="jumbotron" style="height: 520px; width: 920px; padding-top:2px; padding-bottom:1px; align-content:center ; background-color:GrayText ; border-style:groove">
            @*<div class="jumbotron" style="height: 480px; width: 850px; align-content:center; background-color:lightgrey">*@
           
             <div class="col-md-4">
                 <hr />
                 <h2 id="bill"><span class="count">@ViewBag.usercount</span><span> </span>Users</h2><br /><br />
                <hr />
                <h2 id="bill"><span class="count">@ViewBag.projectcount</span><span> </span>Projects</h2><br /><br />
              <hr />
                <h2 id="bill"><span class="count">@ViewBag.ticketcount</span><span> </span>Tickets</h2>
                 <h3 id="bill"><span class="count2">@ViewBag.resolvedcount</span><span> </span>Resolved</h3>
                 <h3 id="bill"><span class="count2">@ViewBag.opencount</span><span> </span> Open</h3><br /><br /><br /><br /><br /><br /><br /><br />
            <hr />
                
            </div>
                <h1 class="h1jumbo" style="color:black; font-family:'Bookman Old Style'; padding:0">Bug Out! </h1>
            <p @*class="lead"*@ style="color:black;padding-top:1px">
                    is an enterprise ready bug tracking package.  It allows for the administration of roles, full spectrum project management from
                    creation and ownership to assignment of manager, developers and users.  Additionally, this tool
                    provides complete control of the creation, commenting and assignment of project specific fix tickets.
                    With full ticket histories users, developers, managers and administrators can track each and every
                    phase of their respective tickets, leaving no room for question as to it's status. @*the status of any given ticket.*@
                    Each level of user has full access to his or her ticketing permissions. <em><i><u>Bug Out!</u></i></em>  is the ultimate
                    bug tracking software.<br /><br />
                </p>
                <br />
                <p>
                    <!-- Trigger the modal with a button -->

                    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Login As A Guest</button>
                </p>
            </div>
    </div>
  
    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Choose Your Guest Role</h4>
                </div>
                <div class="modal-body text-center" style="background-color:forestgreen">
                  
                      <button type="button" class="btn btn-default">@Html.ActionLink("Admin", "DemoLogin", "Account", new { roleIndex = 1 },null)</button><span> </span>
                      <button type="button" class="btn btn-default">@Html.ActionLink("Project Manager", "DemoLogin", "Account", new { roleIndex = 2 }, null)</button><span> </span>
                      <button type="button" class="btn btn-default">@Html.ActionLink("Developer", "DemoLogin", "Account", new { roleIndex = 3 }, null)</button><span> </span>
                      <button type="button" class="btn btn-default">@Html.ActionLink("Submitter", "DemoLogin", "Account", new { roleIndex = 4 }, null)</button>
                     <br />
                                      
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                 </div>
             </div>
            </div>
        </div>
</body>

<script>

