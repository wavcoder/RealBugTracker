@using Microsoft.AspNet.Identity;
@model IEnumerable<BugTracker.Models.Tickets>


<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" />


@{
    ViewBag.Title = "Index";

}

<div class="content">
    <br />
        <div class="row">
            <div class="col-md-8">
                <h2><i>Your Assigned Tickets</i></h2>
            </div>
        </div>
   </div>

        <table  class="table  table-striped table-bordered table-hover datatable ">
            <thead>
                <tr>
                    <th style="width:10%">
                        Assigned
                    </th>
                    <th style="width:10%">
                        Submitter
                    </th>
                    <th style="width:10%">
                        Project
                    </th>
                    <th style="width:10%" >
                        Priority
                    </th>
                    <th style="width:10%">
                        Status
                    </th>
                    <th style="width:10%">
                        Type
                    </th>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th style="width:10%">
                        Modified
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    if (User.Identity.GetUserId() == item.AssignedToUserId)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AssignedToUser.FirstName)
                                @Html.DisplayFor(modelItem => item.AssignedToUser.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OwnerUser.FirstName)
                                @Html.DisplayFor(modelItem => item.OwnerUser.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Project.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TicketPriorities.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TicketType.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Updated)
                            </td>
                            <td>
                                <button class="btn-xs btn-default">
                                    @Html.ActionLink("Details", "Details", new { id = item.Id })

                                </button>
                                @if (User.Identity.GetUserId() == item.AssignedToUserId)
                                {
                                    <button class="btn-xs btn-default">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                    </button>
                                }

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
