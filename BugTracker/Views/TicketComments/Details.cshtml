﻿@model BugTracker.Models.TicketComments

@{
    ViewBag.Title = "Details";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" />
<h2>Ticket Comment Details</h2>
<h3><em>
    @ViewBag.NoComms
    @ViewBag.ticketId
    @ViewData["ticketId"]
</em></h3>
<div>
  
    <hr />
    <dl class="dl-horizontal">
        
        <dt style="text-align:left">
            @Html.DisplayNameFor(model => model.Ticket.Title)
        </dt>

        <dd >
            @Html.DisplayFor(model => model.Ticket.Title)
        </dd>

        <dt style="text-align:left">
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>

        <dd >
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt style="text-align:left">
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>
@if (ViewBag.NoComms != "No Comments")
{
        <dt style="text-align:left">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>

        <dd>
            @Html.Raw(Model.Comment)
        </dd>
}


    </dl>
</div>


<p>
    <button class="btn btn-default">
        @Html.ActionLink("Add a Comment", "Create", new { ticketid = Model.TicketId }) 
    </button>
    <button class="btn btn-default">
        @Html.ActionLink("Back to List", "Index", "Tickets")
    </button>
    @if (ViewBag.NoComms != "No Comments")
    {
        <button class="btn btn-default">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
        </button>
        <button class="btn btn-default">
            @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
        </button>
    }
</p>
<!--jQuery-->
<script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css"></script>


